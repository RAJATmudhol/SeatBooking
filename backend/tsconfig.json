{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",       
    "rootDir": "./src",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
     "sourceMap": true,
    "typeRoots": ["./node_modules/@types"],
   
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}